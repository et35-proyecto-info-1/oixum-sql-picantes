<label class="titulo">Escriba su consulta aqui</label>
<form class="" action="/" method="post">
<textarea name="query"  rows="10" cols="30">{{ text }}</textarea><br />
<button type="submit" name="button" onclick=boton()>Consultar</button>
</form>


{{#if error}}
<div class="cajaError">
<h1 class="msjError">ERROR</h1>
<code><h2>{{ error }}</h2></code>
</div>
{{/if}}

{{#if resultados}}
<div class="cajaResultados">

<h2>Resultados</h2>
<!--<code>{{ resultados }}</code>-->

<table>
  <thead class='head'>
    {{#each columnas}}
      {{#if this.name}}
      <td>{{this.name}}</td>
      {{/if}}
    {{/each}}
  </thead>
  <tbody class='body'>
    {{#each resultados}}
    <tr>
        {{#if this.id}}
        <td>{{this.id}}</td>
        {{/if}}
        {{#if this.nombre}}
        <td>{{this.nombre}}</td>
        {{/if}}
        {{#if this.comidaPreferida}}
        <td>{{this.comidaPreferida}}</td>
        {{/if}}
        {{#if this.fechaNacimiento}}
        <td>{{this.fechaNacimiento}}</td>
        {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>


</div>
{{/if}}

